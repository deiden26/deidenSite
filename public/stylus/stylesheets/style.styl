.slick-prev, .slick-next
	height 50px
	&:before
		transition(0.5s)
		font-size 50px
		font-family FontAwesome
		color #999999
	&:hover:before, &:focus:before
		color #ffffff
.slick-prev:before
		content "\f104"
.slick-next:before
		content "\f105"
.slick-dots
	margin-left 0
	margin-right 0
.slick-dots li button:before
	text-shadow 1px 1px 1px #666, -1px -1px 1px #111
	font-size 10px
	color #272822
	opacity 0.6
.slick-dots li.slick-active button:before
	color #272822
	opacity 1.0
