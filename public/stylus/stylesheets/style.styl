@import "/css/stylesheets/foundation.css"
@import "/css/stylesheets/normalize.css"
@import "/css/stylesheets/font-awesome.css"

//Mixins
transition(val)
	-webkit-transition: all val ease;
	-moz-transition: all val ease;
	-ms-transition: all val ease;
	-o-transition: all val ease;
	transition: all val ease;

// Universal
body
	background-color #272822
p
	font-size 1.1em
a
	transition(0.5s)
	color #999999
	&:visited, &:link
		color #999999
	&:hover, &:active
		color #ffffff
.text
	padding-bottom 20px
	padding-left 15px
	padding-right 15px

//top-bar
.top-bar-bottom-border
	border-bottom solid
	border-width 1px
	border-color #454545
.nav-title
	height 100%
.nav-logo
	height 80%
	padding-right 10px
	padding-bottom 5px

// Top
.top-image
	width 100%
	max-height 100%
	min-height 50%

// About
