@import "/css/stylesheets/foundation.css"
@import "/css/stylesheets/normalize.css"
@import "/css/stylesheets/font-awesome.css"
@import "/css/stylesheets/slick.css"

//Mixins
transition(val)
	-webkit-transition: all val ease;
	-moz-transition: all val ease;
	-ms-transition: all val ease;
	-o-transition: all val ease;
	transition: all val ease;

inset()
	text-shadow: 1px 1px 1px #666, -1px -1px 1px #111;

// Universal
body
	background-color #272822
p
	font-size 1.1em
a
	transition(0.5s)
	color #999999
	&:visited, &:link
		color #999999
	&:hover, &:active
		color #ffffff
.text
	padding-bottom 20px
	padding-left 15px
	padding-right 15px

//top-bar
.top-bar {
    background: #454545;
}

.top-bar-section li a:not(.button) {
    background: #454545 !important;   
}

.top-bar-section li a:not(.button):hover {
    background: #666 !important;   
}

.top-bar-section ul li.active > a {
    background: #666 !important;   
}

.top-bar-section ul li.active > a:hover {
    background: #666 !important;   
}
.top-bar-bottom-border
	box-shadow 0px -1px 7px 1px #000;

.nav-title
	height 100%
.nav-logo
	height 80%
	padding-right 10px
	padding-bottom 5px

// Top
.top-image
	width 100%
	max-height 80%

// About
#about
	background-color #323230
// Skills
#skills
	background-color #272822
.development
	color #6985FF
	text-align center
.design
	color #91CC5D
	text-align center
.product-management
	color #FF5925
	text-align center
	
//Experience
#experience
	background-color #323230
.project-carousel
	margin-left 20px
	margin-right 20px
.app-icon
	width 30%
	padding-bottom 25px
	margin-left auto
	margin-right auto
.divit-content, .shindg-content
	display none
.roles-title
	color #6985FF
.languages-title
	color #91CC5D
.platforms-title
	color #FF5925
.slick-prev, .slick-next
	height 50px
	&:before
		transition(0.5s)
		font-size 50px
		font-family FontAwesome
		color #999999
	&:hover:before, &:focus:before
		color #ffffff
.slick-prev:before
		content "\f104"
.slick-next:before
		content "\f105"

@font-face 
	font-family: "slick";
	src: url("../../fonts/slick/slick.eot");
	src: url("../../fonts/slick/slick.eot?#iefix") format("embedded-opentype"), url("../../fonts/slick/slick.woff") format("woff"), url("../../fonts/slick/slick.ttf") format("truetype"), url("../../fonts/slick/slick.svg#slick") format("svg");
	font-weight: normal;
	font-style: normal; 

.slick-dots
	margin-left 0
	margin-right 0
.slick-dots li button:before
	inset()
	font-size 10px
	color #272822
	opacity 1
.slick-dots li.slick-active button:before
	color #272822
	opacity 0.6

.content-button-text
	margin-bottom 0px

// Testimonials
#testimonials
	background-color #272822
.quotation-content
	text-indent 40px
	margin-top -20px
.quotation-source
	color #7e8080
.blue-quotation-mark
	color #6985FF
.blue-quotation-source
	color #6985FF
.green-quotation-mark
	color #91CC5D
.green-quotation-source
	color #91CC5D
.red-quotation-mark
