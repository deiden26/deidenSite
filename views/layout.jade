doctype html
html(class="no-js" lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")

		title= title
		link(rel='stylesheet', href='/css/stylesheets/style.css')

		script(src="/javascripts/Foundation/modernizr.js")
	body

		// Navigation Bar to be on all pages
		div(class="fixed")
			nav(class="top-bar" data-topbar role="navigation")
				ul(class="title-area")
					li(class="name")
						h1
							a(href="#") Danny
					li(class="toggle-topbar menu-icon")
						a(href="#")
							span
				section(class="top-bar-section")
					ul(class="right")
						li(class="active")
							a(href="#") About
						li
							a(href="#") Skills
						li
							a(href="#") Experience
						li
							a(href="#") Testimonials
						li
							a(href="#") Contact
		block content

		script(src="/javascripts/Foundation/jquery.js")
		script(src="/javascripts/Foundation/fastclick.js")
		script(src="/javascripts/Foundation/foundation.min.js")
		script() $(document).foundation();